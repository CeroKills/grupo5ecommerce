<%- include("../partials/header") %>

    <body>

        <div class="main2">
            <div class="logo" id="logo">
                <img src="/images/5.png" alt="logo comercial">
            </div>
            <h4>Agregar o Editar producto</h4>

            <form action="/agEdProducto" method="POST" class="form">

                <div class="categoria">
                    <label for="categoria">Nombre</label>
                    <input type="text" id="nombre" name="nombre" placeholder="Nombre">
                </div>
                <div class="categoria">
                    <label for="categoria">Descripcion</label>
                    <input type="textarea" id="descripcion" name="descripcion" placeholder="Descripcion">
                </div>
                <div class="botones">
                    <label>Archivo a agregar</label>
                    <input type="file" id="archivo" name="archivo">
                </div>
                <div class="categoria">
                    <label for="categoria">Categoria</label>
                    <input type="text" id="categoria" name="categoria">
                </div>
                <div class="categoria">
                    <label for="categoria">Precio</label>
                    <input type="number" id="precio" name="precio">
                </div>



                <div class="passR">

                    <label>Contraseña administrador</label>

                    <input type="password" id="pass" name="pass" required minlength="6"
                        placeholder="Contraseña Administrador">
                    <input type="password" id="pass2" name="pass2" required minlength="6"
                        placeholder="Confirmar Contraseña Administrador">


                    <div class="botones">
                        <button type="submit"><a href="/">Subir archivo</a></button>
                        <button class="modificar-boton" type="submit"><a href="/">Modificar archivo</a></button>

                    </div>
                </div>

            </form>

        </div>


        <%- include("../partials/footer") %>


            <script src=">./index.js"></script>
    </body>

</html>